<%= render 'shared/errors',obj: @recipe %>
<div class="row">
  <div class="well col-md-8 col-md-offset-2">
     <%= form_for(@recipe, html: { multipart: true }) do |i| %>
       <%= i.label :name %>
       <%= i.text_field :name %>
       <%= i.label :summary %>
       <%= i.text_field :summary %>
       <%= i.label :decsription %>
       <%= i.text_area :decsription,rows: 10 %>
       <span class="pic">
         <%= i.file_field :picture, accept: 'image/jpeg,image/png,image/gif' %>
       </span>
       <%= i.submit(@recipe.new_record? ? "Create Recipe": "Update Recipe",class:"btn btn-success") %>
       <% end %>
 </div>
</div>
<script type="text/javascript">
 $('#recipe_picture').bind('change',function() {
  var size_in_megabytes = this.files[0].size/1024/1024;
  if (size_in_megabytes > 5) {
    alert("Max file size is 5MB.Please upload small pic");
  }
});
</script>